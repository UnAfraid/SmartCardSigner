<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.unafraid.signer.gui.controllers.MainController">
    <center>
        <GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="1.7976931348623157E308" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="1.7976931348623157E308" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" GridPane.rowIndex="1">
                    <children>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <TextField fx:id="middlware" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308" promptText="Middleware "
                                           text="C:/Windows/System32/bit4ipki.dll" GridPane.rowIndex="1">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <GridPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                        mnemonicParsing="false" onAction="#selectMiddleware" text="Select"
                                        GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </GridPane.margin>
                                </Button>
                                <Label text="Middleware ">
                                    <GridPane.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </GridPane.margin>
                                </Label>
                            </children>
                        </GridPane>
                        <Separator maxHeight="3.0" maxWidth="1.7976931348623157E308">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </Separator>
                        <GridPane>
                            <children>
                                <Button fx:id="verifyButton" disable="true" maxHeight="1.7976931348623157E308"
                                        maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#verifyPin"
                                        text="Verify" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <GridPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </GridPane.margin>
                                </Button>
                                <TextField fx:id="pin" disable="true" maxHeight="1.7976931348623157E308"
                                           maxWidth="1.7976931348623157E308" promptText="PIN" text="12345"
                                           GridPane.rowIndex="1">
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <GridPane.margin>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                                    </GridPane.margin>
                                </TextField>
                                <Label text="PIN">
                                    <GridPane.margin>
                                        <Insets left="10.0" right="10.0"/>
                                    </GridPane.margin>
                                </Label>
                            </children>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                        </GridPane>
                        <Separator maxHeight="3.0" maxWidth="1.7976931348623157E308">
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </Separator>
                        <ComboBox fx:id="certificateSelector" disable="true" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308" onAction="#selectCertificate"
                                  promptText="Certificates">
                            <VBox.margin>
                                <Insets left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </ComboBox>
                        <TextArea fx:id="certificateDescr" disable="true" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity"
                                  VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="1.0"/>
                            </VBox.margin>
                        </TextArea>
                        <Separator maxHeight="3.0" maxWidth="1.7976931348623157E308">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </Separator>
                        <Button fx:id="startButton" disable="true" maxHeight="1.7976931348623157E308"
                                maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#startServer"
                                text="Start server">
                            <VBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
        </GridPane>
    </center>
    <bottom>
        <ProgressBar fx:id="progressBar" maxHeight="15.0" maxWidth="1.7976931348623157E308" progress="0.0"
                     BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </ProgressBar>
    </bottom>
    <top>
        <MenuBar maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="25.0"
                 BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onApplicationExitRequest" text="Exit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onAboutRequest" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
